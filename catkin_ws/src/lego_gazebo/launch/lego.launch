<launch>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <arg name="dir" />
  <arg name="map" />
  <arg name="sonar_noise" default="0" />
  <arg name="gyro_noise" default="0" />
  <param param="sonar_noise" value="$(arg sonar_noise)" />
  <param param="gyro_noise" value="$(arg gyro_noise)" />
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find lego_gazebo)/worlds/$(arg dir)/$(arg map).world"/>
    <!-- more default parameters can be changed here -->
  </include>
</launch>
